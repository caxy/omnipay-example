{% extends "layout.twig" %}

{% set title = "Omnipay Example Application" %}
{% block content %}
    <p>The following gateways are available:</p>

    <ul>
        {% for gateway in gateways %}
            <li><a href="{{ global.request.baseUrl }}/gateways/{{ gateway.shortName }}">{{ gateway.name }}</a></li>
        {% endfor %}
    </ul>
{% endblock %}
